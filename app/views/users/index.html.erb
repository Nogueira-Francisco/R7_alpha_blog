<h1 class="text-center mt-4 ">Alpha Bloggers</h1>

<div class="apple_pagination mt-4">
    <%= will_paginate @users, :container => false %>
</div>

<% @users.each do |user| %>
  <div class="container" id="article-card"> 
    <div class="card text-center shadow-lg mb-5 bg-body rounded"> 
      <div class="card-header fst-italic darker-background" >
        <%= link_to user.username, user %>
        </div>
        <div class="card-body">
          <h5 class="card-title">
            <%= link_to gravatar_for(user, size: 150), user %>
          </h5>
          <div class="card-text">
            <%= pluralize(user.articles.count, "article") %>
          </div>
            <%= link_to 'View Profile', user, class: "btn btn-outline-success" %>
            <%= link_to 'Edit Profile', edit_user_path(user), class: "btn btn-outline-info" %>
          </div>
        <div class="card-footer text-muted darker-background">
          <small>Joined <%= time_ago_in_words(user.created_at) %> ago</small>
      </div>
    </div>
  </div>
<% end %>

<div class="apple_pagination mb-4">
    <%= will_paginate @users, :container => false %>
</div>
